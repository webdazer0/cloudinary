{
    "version": 2,
    "installCommand": "npm install",
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/public/uploads/**",
            "use": "@vercel/static",
            "config": { "includeFiles": ["src/public/uploads/**"] }
        }
    ],
    "routes": [
        { 
            "handle": "filesystem" 
        },
        {
            "src": "/(.*)",
            "dest": "/"
        },
        {
            "src": "/(.+)",
            "dest": "src/public/uploads/$1"
        }
    ]
  }